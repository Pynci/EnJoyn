            <TextView
                android:id="@+id/eventTitle"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Andare a mangiare al Kfc"
                app:layout_constraintStart_toEndOf="@+id/categoryImage"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="30/11/2023"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/distance" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="17:00 - 19:00"
                app:layout_constraintBaseline_toBaselineOf="@+id/date"
                app:layout_constraintStart_toEndOf="@+id/date" />

            <TextView
                android:id="@+id/place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="via bicocca 29"
                app:layout_constraintBaseline_toBaselineOf="@+id/distance"
                app:layout_constraintStart_toEndOf="@+id/distance" />

            <TextView
                android:id="@+id/distance"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="2 Km"
                app:drawableStartCompat="@drawable/baseline_place_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/categoryImage" />

            <Button
                android:id="@+id/joinButton"
                style="@style/Widget.Material3.Button.IconButton.Filled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unisciti"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/peopleNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/baseline_people_outline_24"
                android:text="3"
                app:layout_constraintBottom_toTopOf="@+id/joinButton"
                app:layout_constraintEnd_toEndOf="@+id/joinButton"
                app:layout_constraintStart_toStartOf="@+id/joinButton" />

            <ImageView
                android:id="@+id/categoryImage"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="Immagine scelta dall'utente da API"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/img_0410" />

